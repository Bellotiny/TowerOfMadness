{
	"lines":[
		{
			"speaker": "Gustavo", 
			"text": "...Where am I?"
		},
		{
			"speaker": "Gustavo", 
			"text": "It's... So cold.."
		},
		{
			"speaker": "Gustavo", 
			"text": "(Anxious)...Is anyone here?"
		},
		{
			"speaker": "Gustavo", 
			"text": "(Scared) HELLLOOO!!"
		},
		{
			"speaker": "Gustavo", 
			"text": "Am I really all alone?"
		},
		{
			"speaker": "T.O.M.", 
			"text": "No you're not.."
		},
		{
			"speaker": "Gustavo", 
			"text": "(Frightfully looking around)...Who is this?"
		},
		{
			"speaker": "Gustavo", 
			"text": "(A floating light?)...What are you?"
		},
		{
			"speaker": "T.O.M.", 
			"text": "Someone who can help you get out of here"
		}
	]
